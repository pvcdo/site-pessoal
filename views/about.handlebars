<h1>About</h1>

<h2>Certificates</h2>

<div class="row">
    <div class="certificado col-md-6">
        {{#each certificados}}
            <div id="cert-{{this.id}}">
                <p 
                    onmouseover="abreCert('{{this.id}}','{{this.url}}','{{this.plataforma}}')"

                    onmouseleave="fechaCert('{{this.id}}')"
                >
                    {{this.nome}}
                </p>
            </div>
        {{/each}} 
    </div>
    <div class="col-md-6">
        <canvas id="pfd-render">paulo</canvas>
        <p id="desc-cert"></p>
    </div>
</div>